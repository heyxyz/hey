{
  "name": "@hey/api",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "build": "vite build",
    "codegen": "prisma generate --schema ./src/db/schema.prisma > /dev/null",
    "dev": "nodemon -w src -x tsx src/server.ts",
    "postinstall": "pnpm codegen",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --fix --ext .js,.ts,.tsx",
    "prettier": "prettier --check \"**/*.{js,ts,tsx,md}\"  --cache",
    "prettier:fix": "prettier --write \"**/*.{js,ts,tsx,md}\"  --cache",
    "prisma:clean": "prisma migrate reset --schema ./src/db/schema.prisma",
    "prisma:format": "prisma format --schema ./src/db/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./src/db/schema.prisma",
    "prisma:seed": "ts-node ./src/db/seed.ts",
    "start": "NODE_ENV=production tsx src/server.ts",
    "test:dev": "vitest run",
    "typecheck": "tsc --pretty"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.568.0",
    "@aws-sdk/client-sts": "^3.568.0",
    "@clickhouse/client": "^1.0.1",
    "@hey/abis": "workspace:*",
    "@hey/data": "workspace:*",
    "@hey/helpers": "workspace:*",
    "@irys/sdk": "^0.1.23",
    "@prisma/client": "^5.13.0",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-file-routing": "^3.0.3",
    "fast-xml-parser": "^4.3.6",
    "linkedom": "^0.16.11",
    "pg-promise": "^11.6.0",
    "request-ip": "^3.3.0",
    "tsx": "^4.8.2",
    "typescript": "^5.4.5",
    "ua-parser-js": "^1.0.37",
    "urlcat": "^3.1.0",
    "uuid": "^9.0.1",
    "viem": "^2.9.31",
    "vite-express": "^0.16.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@hey/config": "workspace:*",
    "@hey/types": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.15",
    "@types/node": "^20.12.8",
    "@types/request-ip": "^0.0.41",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.1.0",
    "prisma": "^5.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vite": "^5.2.11",
    "vitest": "^1.5.3"
  }
}
