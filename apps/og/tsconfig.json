{
  "extends": "@hey/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "webworker"
    ],
    "paths": {
      "@components*": [
        "src/components*"
      ],
      "@lib*": [
        "src/lib*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
