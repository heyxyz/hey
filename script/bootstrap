#!/bin/bash

#/ Usage: script/bootstrap
#/ Install dependencies and make sure everything is ready to go.

echo "Setting up env vars ğŸŒ"
echo "Updating apps/web env vars ğŸŒ"
cd apps/web; cp .env.example .env
cd ../../
# -------------------------------------
echo "Updating apps/prerender env vars ğŸŒ"
cd apps/prerender; cp .env.example .env
cd ../../
# -------------------------------------
echo "Updating packages/workers/metadata env vars ğŸŒ"
cd packages/workers/metadata
# Generate private key and insert into .dev.vars
random_hex=$(head -c 32 /dev/urandom | xxd -p -c 32)
echo "BUNDLR_PRIVATE_KEY=$random_hex" > .dev.vars
cd ../../../
# -------------------------------------
echo "Updating packages/workers/snapshot-relay env vars ğŸŒ"
cd packages/workers/snapshot-relay
random_hex=$(head -c 32 /dev/urandom | xxd -p -c 32)
echo "TESTNET_PROPOSAL_CREATOR_PRIVATE_KEY=701e559a4db7cc91035084c175ccad9d94f7a014e9e40efd5154bebbc42c944a" > .dev.vars
cd ../../../
# -------------------------------------
echo "Updating packages/workers/oembed env vars ğŸŒ"
cd packages/workers/oembed
echo "WORKER_ENV=development" > .dev.vars
echo "IMAGEKIT_URL=https://ik.imagekit.io/lensterdev" >> .dev.vars
cd ../../../
# -------------------------------------
echo "Updating packages/workers/spaces env vars ğŸŒ"
cd packages/workers/spaces
echo "HUDDLE_API_KEY=VwTZ4AGTxme9snANex9tep3NwvVMGfYd" > .dev.vars
cd ../../../
# -------------------------------------
echo "Installing dependencies ğŸ“¦"
yarn install --frozen-lockfile
echo "Dependencies installed ğŸ“¦"
# -------------------------------------
echo "Installing playwright ğŸ­"
npx playwright install
echo "Playwright installed ğŸ­"
# -------------------------------------
echo "GraphQL Codegen ğŸ§¬"
yarn codegen
echo "GraphQL Codegen complete ğŸ§¬"
# -------------------------------------
echo "Project bootstrap complete ğŸ‰"
