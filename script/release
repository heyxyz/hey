#!/bin/bash

#/ Usage: script/release
#/ Release to all environments.

git config user.name good
git config user.email good@bcharity.net

branches=("testnet" "staging")

for branch in "${branches[@]}"
do
    echo "Releasing to $branch ðŸš€"
    git pull origin main >> /dev/null
    git checkout $branch
    git merge main
    git push origin $branch
    git checkout main
done

echo "Done ðŸŽ‰"
