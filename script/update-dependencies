#!/bin/bash

#/ Usage: script/update-dependencies
#/ Create a branch to update a dependency.

# Delete update-dependencies branch if it exists
if git branch | grep -q "update-dependencies"; then
  echo "Deleting update-dependencies branch ğŸ—‘"
  git branch -D update-dependencies
  echo "Branch deleted ğŸ‰"
fi

# Create update-dependencies branch
echo "Creating update-dependencies branch ğŸŒ±"
git checkout -b update-dependencies
echo "Branch created ğŸ‰"

# Update dependencies in package.json
echo "Updating dependencies in package.json ğŸ“¦"
bun update --interactive --recursive --latest
# Clean up bun-lock.yaml file and install dependencies
rm bun-lock.yaml && bun install
# Git operations
git add -A
git commit -am "chore: update dependencies ğŸ“¦"
git push origin update-dependencies
gh pr create --fill
echo "Dependencies updated ğŸ‰"
